# Domain Catcher Environment Variables
# Copy this file to .env and fill in your actual values

# Dynadot API (Primary registrar for domain registration)
# Get your API key from: https://www.dynadot.com/domain/api
DYNADOT_API_KEY=your_dynadot_api_key_here

# Porkbun API (Backup registrar)
# Get your API key from: https://porkbun.com/account/api
PORKBUN_API_KEY=your_porkbun_api_key_here
PORKBUN_SECRET_KEY=your_porkbun_secret_key_here

# Discord Webhook (Primary notification method)
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook_url_here

# Optional: Email notifications (leave empty if not using)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
